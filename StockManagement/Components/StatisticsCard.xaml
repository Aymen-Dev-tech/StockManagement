<UserControl
    x:Class="StockManagement.Components.StatisticsCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StockManagement.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="root"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border
        MinWidth="180"
        MinHeight="100"
        MaxWidth="100"
        MaxHeight="100"
        Margin="0,0,50,0"
        Background="#E5F2FF"
        BorderBrush="Black"
        BorderThickness="0.5"
        CornerRadius="4">
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <TextBlock Margin="0,0,0,10" Text="{Binding Title, ElementName=root}" />
            <TextBlock
                HorizontalAlignment="Center"
                FontWeight="Bold"
                Text="{Binding Value, ElementName=root}" />
        </StackPanel>

    </Border>
</UserControl>
